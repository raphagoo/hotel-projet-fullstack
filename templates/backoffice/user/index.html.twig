{% extends 'base.html.twig' %}
{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <ul>
        {% for user in users %}
            <li>{{ user.email }} <a href="{{ path('userModify', {'idUser': user.id}) }}"><button class="btn btn-primary" type="button">Edit</button></a> </li>
        {% endfor %}
    </ul>
    <a href="{{ path('userAdd') }}"><button class="btn btn-primary" type="button">Add user</button></a>
</div>
{% endblock %}
