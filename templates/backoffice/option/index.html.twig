{% extends 'base.html.twig' %}
{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
   
      <table class="table">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col"></th>
    </tr>
  </thead>
  
  <tbody>
    {% for option in listOption %}
<tr>
  <td>
      {{ option.id }}
  </td>
      <td>{{ option.name }}</td>

      <td>{{ option.price }}</td>
   
    <td><a href="{{ path('editOption', {'idOption': option.id}) }}"><button class="btn btn-info" type="button">edit</button></a> <a href="{{ path('deleteOption', {'idOption': option.id}) }}"><button class="btn btn-danger" type="button">delete</button></a></td>
    
  
</tr>
    {% endfor %}
    </tbody>
</table>
    
     <a href="{{ path('addOption') }}"><button class="btn btn-primary" type="button">Add option</button></a> 
</div>
{% endblock %}